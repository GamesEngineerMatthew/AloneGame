            <string>///Move the player
hspd = keyboard_check(ord('D'))-keyboard_check(ord('A'));
vspd = keyboard_check(ord('S'))-keyboard_check(ord('W'));
dir = point_direction(x,y,mouse_x,mouse_y);
fire = (mouse_check_button(mb_left) &amp;&amp; alarm[0] &lt;= 0 &amp;&amp; Shots &gt; 0);


if(!place_meeting(x+hspd*spd,y,oWall)) {
    x+=hspd*spd;
}

if(!place_meeting(x,y+vspd*spd,oWall)) {
    y+=vspd*spd;
}

if (fire) {
    //Reset Alarm[0]
    alarm[0] = shot_delay;
    
    //Find target
    var temp_dir = dir+random_range(-vari,vari);
    var temp_x = x+lengthdir_x(48,temp_dir);
    var temp_y = y+lengthdir_y(48,temp_dir);
    var start_x = temp_x;
    var start_y = temp_y;
    var collision = (position_meeting(temp_x,temp_y,oWall) || position_meeting(temp_x,temp_y,oTarget));
    while(!collision &amp;&amp; distance_to_point (temp_x,temp_y &lt; room_width)) {
        temp_x += lengthdir_x(4, temp_dir);
        temp_y += lengthdir_y(4, temp_dir);
        collision = (position_meeting(temp_x,temp_y,oWall) || position_meeting(temp_x,temp_y,oTarget));
    }
    
    var shot = instance_create(temp_x,temp_y, oShot);
    shot.start_x = start_x;
    shot.start_y = start_y;
}
if(Shots = 0){
    room_goto(DeathScreen);
}
if(Targets = 0) {
    room_goto_next();
}
</string>
